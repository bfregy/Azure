{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
        "type": "string",
        "metadata": {
            "description": "Admin Username"
        }
    },
    "adminPassword": {
        "type": "securestring",
      "metadata": {
        "description": "Admin Password"
      }
    },       
    "WindowsServerLicenseType": {
      "type": "string",
      "defaultValue": "None",
      "allowedValues": [
        "None",
        "Windows_Server"
      ],      
      "metadata": {
          "description": "Windows Server OS License Type"
      }
    },    
    "WindowsClientLicenseType": {
      "type": "string",
      "defaultValue": "None",
      "allowedValues": [
        "None",
        "Windows_Client"
      ],      
      "metadata": {
          "description": "Windows Client OS License Type"
      }
    },    
    "NamingConvention": {
      "type": "string",
      "defaultValue": "khl",
      "metadata": {
        "description": "VNet1 Name"
      }
    },
    "SubDNSDomain": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
          "description": "Sub DNS Domain Name Example:  sub1. must include a DOT AT END. LEAVE EMPTY IF NO SUB DNS DOMAIN IS NEEDED!!!!"
      }
    },      
    "SubDNSBaseDN": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
          "description": "Sub DNS Domain Name Example:  DC=sub2,DC=sub1, must include COMMA AT END. LEAVE EMPTY IF NO SUB DNS DOMAIN IS SPECIFIED!!!!"
      }
    },          
    "NetBiosDomain": {
      "type": "string",
      "defaultValue": "dir",
      "metadata": {
          "description": "NetBios Parent Domain Name"
      }
    },          
    "InternalDomain": {
      "type": "string",
      "defaultValue": "killerhomelab",
      "metadata": {
          "description": "NetBios Parent Domain Name"
      }
    },              
    "TLD": {
      "type": "string",
      "defaultValue": "com",
      "allowedValues": [
        "com",
        "net",
        "org",
        "edu",
        "gov",
        "mil"
      ],      
      "metadata": {
          "description": "Top-Level Domain Name"
      }
    },                            
    "vnet1ID": {
      "type": "string",
      "defaultValue": "10.1",
      "metadata": {
        "description": "VNet1 Prefix"
      }
    },        
    "RootCAName": {
      "type": "string",
      "defaultValue": "Offline Root CA",
      "metadata": {
          "description": "Offline Root CA Name"
      }
    },                    
    "IssuingCAName": {
      "type": "string",
      "defaultValue": "Issuing CA",
      "metadata": {
          "description": "Issuing CA Name"
      }
    },
    "RootCAHashAlgorithm": {
      "type": "string",
      "defaultValue": "SHA256",
        "allowedValues": [
          "SHA256",
          "SHA1"
        ],
      "metadata": {
          "description": "Offline Root CA Algorithm"
      }
    },    
    "RootCAKeyLength": {
      "type": "string",
      "defaultValue": "4096",
        "allowedValues": [
          "4096",
          "2048"
        ],
      "metadata": {
          "description": "Offline Root CA Key Length"
      }
    },                                
    "IssuingCAHashAlgorithm": {
      "type": "string",
      "defaultValue": "SHA256",
        "allowedValues": [
          "SHA256",
          "SHA1"
        ],
      "metadata": {
          "description": "Issuing CA Algorithm"
      }
    },    
    "IssuingCAKeyLength": {
      "type": "string",
      "defaultValue": "4096",
        "allowedValues": [
          "4096",
          "2048"
        ],
      "metadata": {
          "description": "Issuing CA Key Length"
      }
    },        
    "RCAOSVersion": {
        "type": "string",
        "defaultValue": "2019-Datacenter",
        "allowedValues": [
          "2019-Datacenter",
          "2016-Datacenter"
        ],
        "metadata": {
            "description": "Offline Root CA OS Version"
        }
    },   
    "ICAOSVersion": {
        "type": "string",
        "defaultValue": "2019-Datacenter",
        "allowedValues": [
          "2019-Datacenter",
          "2016-Datacenter"
        ],
        "metadata": {
            "description": "Issuing CA OS Version"
        }
    },             
    "RCAVMSize": {
        "type": "string",
        "defaultValue": "Standard_D2s_v3",
        "metadata": {
            "description": "Offline Root CA VMSize"
        }
    },
    "ICAVMSize": {
        "type": "string",
        "defaultValue": "Standard_D2s_v3",
        "metadata": {
            "description": "Issuing CA VMSize"
        }
    },   
    "roleAssignmentGuid": {
        "type": "string",
        "defaultValue": "[newGuid()]",
        "metadata": {
            "description": "A new GUID used to identify the role assignment"
        }
    },                                    
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
          "description": "The location of resources, such as templates and DSC modules, that the template depends on"
      },
      "defaultValue": "[deployment().properties.templateLink.uri]"
    },
    "_artifactsLocationSasToken": {
        "type": "securestring",
        "metadata": {
            "description": "Auto-generated token to access _artifactsLocation. Leave it blank unless you need to provide your own value."
        },
        "defaultValue": ""
    }
  },
  "variables": {
    "vnet1Name": "[concat(parameters('NamingConvention'),'-VNet1')]",
    "vnet1Prefix": "[concat(parameters('vnet1ID'),'.0.0/16')]",
    "vnet1subnet1Name": "[concat(parameters('NamingConvention'),'-VNet1-Subnet1')]",    
    "vnet1subnet1Prefix": "[concat(parameters('vnet1ID'),'.1.0/24')]",    
    "vnet1subnet2Name": "[concat(parameters('NamingConvention'),'-VNet1-Subnet2')]",    
    "vnet1subnet2Prefix": "[concat(parameters('vnet1ID'),'.2.0/24')]",    
    "dc1IP": "[concat(parameters('vnet1ID'),'.1.',variables('dc1lastoctet'))]",            
    "dc1name": "[concat(parameters('NamingConvention'),'-dc-01')]",               
    "rcacomputername": "[concat(parameters('NamingConvention'),'-rca-01')]",   
    "rcaoldvmname": "[concat(parameters('NamingConvention'),'-rca-01')]",               
    "rcanewvmname": "[concat(parameters('NamingConvention'),'-rca-01-new')]",                   
    "rcaIP": "[concat(parameters('vnet1ID'),'.1.',variables('rcalastoctet'))]",            
    "oldrcaIP": "[concat(parameters('vnet1ID'),'.1.',variables('oldrcalastoctet'))]",                
    "icaname": "[concat(parameters('NamingConvention'),'-ica-01')]",           
    "icaIP": "[concat(parameters('vnet1ID'),'.1.',variables('icalastoctet'))]",   
    "ocspname": "[concat(parameters('NamingConvention'),'-ocsp-01')]",                            
    "ocspIP": "[concat(parameters('vnet1ID'),'.1.',variables('ocsplastoctet'))]",                
    "dc1lastoctet": "101",
    "rcalastoctet": "99",
    "oldrcalastoctet": "98",    
    "icalastoctet": "102",
    "ocsplastoctet": "103",    
    "CATemplateScriptUrl": "https://elliottf.blob.core.windows.net/github/Scripts/Create_CA_Templates.ps1",              
    "domainName": "[concat(parameters('SubDNSDomain'),parameters('InternalDomain'),'.',parameters('TLD'))]",
    "BaseDN": "[concat(parameters('SubDNSBaseDN'),'DC=',parameters('InternalDomain'),',DC=',parameters('TLD'))]",
    "WKOUPath": "[concat('OU=Windows 10,OU=Workstations,',variables('BaseDN'))]",
    "SRVOUPath": "[concat('OU=Servers,',variables('BaseDN'))]",
    "ManagedIDName": "[concat(parameters('NamingConvention'),'-mi-', uniqueString(resourceGroup().id))]",
    "ShutdownScriptName": "[concat(parameters('NamingConvention'),'-vmshutdown-')]",                
    "Contributor": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', 'b24988ac-6180-42a0-ab88-20f7382dd24c')]"                     
  },  
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "RootCABackup",
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/cabackup.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('rcaoldvmname')]"
              },                                                         
              "CAName": {
                  "value": "[parameters('RootCAName')]"
              },
              "location": {
                  "value": "[resourceGroup().location]"
              },              
              "adminUsername": {
                "value": "[parameters('adminUsername')]"
              },                                                                                                            
              "adminPassword": {
                "value": "[parameters('adminPassword')]"
              },
              "_artifactsLocation": {
                "value": "[parameters('_artifactsLocation')]"
              },                                                                                                            
              "_artifactsLocationSasToken": {
                "value": "[parameters('_artifactsLocationSasToken')]"
              }                                                                                                                                                                                                                                                                                                                                                                                                                                                               
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "TransferRootCABackup1",
      "dependsOn": [
        "RootCABackup"
      ],       
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/cabackuptransfer1.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('ocspname')]"
              },
              "RootCAIP": {
                  "value": "[variables('rcaIP')]"
              },                                                          
              "NetBiosDomain": {
                  "value": "[parameters('NetBiosDomain')]"
              },
              "location": {
                  "value": "[resourceGroup().location]"
              },              
              "adminUsername": {
                "value": "[parameters('adminUsername')]"
              },                                                                                                            
              "adminPassword": {
                "value": "[parameters('adminPassword')]"
              },
              "_artifactsLocation": {
                "value": "[parameters('_artifactsLocation')]"
              },                                                                                                            
              "_artifactsLocationSasToken": {
                "value": "[parameters('_artifactsLocationSasToken')]"
              }                                                                                                                                                                                                                                                                                                                                                                                                                                                               
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "CreateManagedID",     
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/managedidentity.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "ManagedIDName": {
                  "value": "[variables('ManagedIDName')]"
              },
              "location": {
                  "value": "[resourceGroup().Location]"
              }
          }
      }
    },  
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "AssignManagedIDRG1",
      "dependsOn": [
        "CreateManagedID"
      ],        
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/roleassignment.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "PrincipalID": {
                  "value": "[reference('CreateManagedID').outputs.manageduseridentity.value]"
              },
              "RoleDefinitionID": {
                  "value": "[variables('Contributor')]"
              },
              "roleAssignmentGuid": {
                  "value": "[parameters('roleAssignmentGuid')]"
              }              
          }
      }
    },  
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "ChangeOldRootCAIP",
      "dependsOn": [
        "TransferRootCABackup1"
      ],      
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/1nic-1disk-vm.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('rcaoldvmname')]"
              },
              "computerIP": {
                  "value": "[variables('oldrcaIP')]"
              },
              "Publisher": {
                  "value": "MicrosoftWindowsServer"
              },
              "Offer": {
                  "value": "WindowsServer"
              },
              "OSVersion": {
                "value": "[parameters('RCAOSVersion')]"
              },              
              "LicenseType": {
                "value": "[parameters('WindowsServerLicenseType')]"
              },               
              "VMSize": {
                "value": "[parameters('RCAVMSize')]"
              },
              "vnetName": {
                "value": "[variables('vnet1Name')]"
              },            
              "subnetName": {
                "value": "[variables('vnet1subnet1Name')]"
              },            
              "adminUsername": {
                "value": "[parameters('adminUsername')]"
              },                                                                                                            
              "adminPassword": {
                "value": "[parameters('adminPassword')]"
              },                                                                                                                                        
              "location": {
                  "value": "[resourceGroup().Location]"
              }
          }
      }
    },                 
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "ShutdownOldRootCA",
      "dependsOn": [
        "AssignManagedIDRG1",        
        "ChangeOldRootCAIP"
      ],        
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/shutdownvm.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "ManagedIDName": {
                  "value": "[variables('ManagedIDName')]"
              },
              "computerName": {
                  "value": "[variables('rcaoldvmname')]"
              },      
              "ResourceGroupName": {
                  "value":  "[resourceGroup().name]"
              },                                               
              "ScriptName": {
                  "value": "[concat(variables('ShutdownScriptName'),'-01')]"           
              },                   
              "ScriptLocation": {
                  "value": "[resourceGroup().location]"
              },
              "location": {
                  "type": "string",
                "metadata": {
                  "description": "Region of Resources"
                }
              }                            
          }
      }
    },  
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "DeployNewRootCA",
      "dependsOn": [
        "ShutdownOldRootCA"
      ],      
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/1nic-1disk-vm-new.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('rcacomputername')]"
              },
              "vmName": {
                  "value": "[variables('rcanewvmname')]"
              },              
              "computerIP": {
                  "value": "[variables('rcaIP')]"
              },
              "Publisher": {
                  "value": "MicrosoftWindowsServer"
              },
              "Offer": {
                  "value": "WindowsServer"
              },
              "OSVersion": {
                "value": "[parameters('RCAOSVersion')]"
              },              
              "LicenseType": {
                "value": "[parameters('WindowsServerLicenseType')]"
              },               
              "VMSize": {
                "value": "[parameters('RCAVMSize')]"
              },
              "vnetName": {
                "value": "[variables('vnet1Name')]"
              },            
              "subnetName": {
                "value": "[variables('vnet1subnet1Name')]"
              },            
              "adminUsername": {
                "value": "[parameters('adminUsername')]"
              },                                                                                                            
              "adminPassword": {
                "value": "[parameters('adminPassword')]"
              },                                                                                                                                        
              "location": {
                  "value": "[resourceGroup().Location]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "TransferRootCABackup2",
      "dependsOn": [
        "DeployNewRootCA"
      ],       
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/cabackuptransfer2.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('ocspname')]"
              },
              "BackupCAIP": {
                  "value": "[variables('ocspIP')]"
              },                                                          
              "NetBiosDomain": {
                  "value": "[parameters('NetBiosDomain')]"
              },
              "location": {
                  "value": "[resourceGroup().location]"
              },              
              "adminUsername": {
                "value": "[parameters('adminUsername')]"
              },                                                                                                            
              "adminPassword": {
                "value": "[parameters('adminPassword')]"
              },
              "_artifactsLocation": {
                "value": "[parameters('_artifactsLocation')]"
              },                                                                                                            
              "_artifactsLocationSasToken": {
                "value": "[parameters('_artifactsLocationSasToken')]"
              }                                                                                                                                                                                                                                                                                                                                                                                                                                                               
          }
      }
    }      
  ]
}
