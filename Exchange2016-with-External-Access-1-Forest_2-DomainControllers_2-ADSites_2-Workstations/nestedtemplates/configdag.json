{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "computerName": {
            "type": "string",
            "metadata": {
                "description": "Computer Name"
            }
        },      
        "NetBiosDomain": {
            "type": "string",
            "metadata": {
                "description": "NetBios Domain Name"
            }
        },        
        "BaseDN": {
            "type": "string",
            "metadata": {
                "description": "Base Domain Distiguished Name"
            }
        },                        
        "Site1DC": {
            "type": "string",
            "metadata": {
                "description": "Site 2 Domain Controller Name"
            }
        },
        "Site2DC": {
            "type": "string",
            "metadata": {
                "description": "Site 2 Domain Controller Name"
            }
        },
        "ConfigDC": {
            "type": "string",
            "metadata": {
                "description": "Domain Controller used for Exchange Config"
            }
        },                                                         
        "Site1FSW": {
            "type": "string",
            "metadata": {
                "description": "Site1 File Share Witeness"
            }
        },                                             
        "DAGName": {
            "type": "string",
            "metadata": {
                "description": "Database Availability Group Name"
            }
        },                                                 
        "PassiveDAGNode": {
            "type": "string",
            "metadata": {
                "description": "Passive Mailbox Server"
            }
        },             
        "DB1Name": {
            "type": "string",
            "metadata": {
                "description": "Database 1 Name"
            }
        },                                     
        "DB2Name": {
            "type": "string",
            "metadata": {
                "description": "Database 2 Name"
            }
        },                                                                                           
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "The name of the Administrator of the new VM and Domain"
            }
        },
        "adminPassword": {
            "type": "securestring",
          "metadata": {
            "description": "The password for the Administrator account of the new VM and Domain"
          }
        },                
        "location": {
            "type": "string",
          "metadata": {
            "description": "Region of Resources"
          }
        }, 
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources, such as templates and DSC modules, that the template depends on"
            }
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation"
            }
        }                
    },
    "variables": {
        "ModulesURL": "[uri(parameters('_artifactsLocation'), concat('DSC/CONFIGEXCHANGE16.zip', parameters('_artifactsLocationSasToken')))]",
        "ConfigurationFunction": "CONFIGEXCHANGE16.ps1\\CONFIGEXCHANGE16"
    },
    "resources": [
        {
            "name": "[concat(parameters('computerName'),'/Microsoft.Powershell.DSC')]",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "apiVersion": "2019-03-01",
            "location": "[parameters('location')]",
            "properties": {
                "publisher": "Microsoft.Powershell",
                "type": "DSC",
                "typeHandlerVersion": "2.19",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "ModulesUrl": "[variables('modulesUrl')]",
                    "ConfigurationFunction": "[variables('configurationFunction')]",
                        "Properties": {
                            "ComputerName": "[parameters('ComputerName')]",
                            "NetBiosDomain": "[parameters('NetBiosDomain')]",        
                            "BaseDN": "[parameters('BaseDN')]",                                                                                                               
                            "Site1DC": "[parameters('Site1DC')]",
                            "Site2DC": "[parameters('Site2DC')]",                                                        
                            "ConfigDC": "[parameters('ConfigDC')]",        

                            "Site1FSW": "[parameters('Site1FSW')]",                                                                                                                                                                                
                            "DAGName": "[parameters('DAGName')]",                                                                                                                                                                            
                            "PassiveDAGNode": "[parameters('PassiveDAGNode')]",                                                                                                                                                                                                        
                            "DB1Name": "[parameters('DB1Name')]",                                                                                                                                                                                                        
                            "DB2Name": "[parameters('DB2Name')]",                                                                                                                                                                                                                                                                
                            "AdminCreds": {
                                "UserName": "[parameters('adminUsername')]",
                                "Password": "PrivateSettingsRef:AdminPassword"
                            }                                                                                   
                        }
                    },
                    "protectedSettings": {
                        "Items": {
                            "AdminPassword": "[parameters('adminPassword')]"
                        }
                    }                                        
                }
            }
    ]
}