          "metadata": {
            "description": "Region of Resources"
          }
        }, 
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "The name of the Administrator of the new VM and Domain"
            }
        },
        "adminPassword": {
            "type": "securestring",
          "metadata": {
            "description": "The password for the Administrator account of the new VM and Domain"
          }
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources, such as templates and DSC modules, that the template depends on"
            }
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation"
            }
        }                
    },
    "variables": {
        "ModulesURL": "[uri(parameters('_artifactsLocation'), concat('DSC/APPLYSTIGS.zip', parameters('_artifactsLocationSasToken')))]",
        "ConfigurationFunction": "APPLYSTIGS.ps1\\APPLYSTIGS"
    },
    "resources": [
        {
            "name": "[concat(parameters('computerName'),'/Microsoft.Powershell.DSC')]",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "apiVersion": "2019-03-01",
            "location": "[parameters('location')]",
            "properties": {
                "publisher": "Microsoft.Powershell",
                "type": "DSC",
                "typeHandlerVersion": "2.19",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "ModulesUrl": "[variables('modulesUrl')]",
                    "ConfigurationFunction": "[variables('configurationFunction')]",
                        "Properties": {
                            "NetBiosDomain": "[parameters('NetBiosDomain')]",
                            "DC1Name": "[parameters('computerName')]",
                            "BaseDN": "[parameters('BaseDN')]",
                            "SVROUPath": "[parameters('SVROUPath')]",
                            "SVR2016OUPath": "[parameters('SVR2016OUPath')]",
                            "WKOUPath": "[parameters('WKOUPath')]",
                            "WK10OUPath": "[parameters('WK10OUPath')]",
                            "DefaultDomainGPOURL": "[parameters('DefaultDomainGPOURL')]",
                            "SVRDCBaselineGPOURL": "[parameters('SVRDCBaselineGPOURL')]",
                            "SVR2016DCBaselineGPOURL": "[parameters('SVR2016DCBaselineGPOURL')]",
                            "SVRDCBaselineTimeGPOURL": "[parameters('SVRDCBaselineTimeGPOURL')]",
                            "SVRBaselineGPOURL": "[parameters('SVRBaselineGPOURL')]",
                            "SVR2016BaselineGPOURL": "[parameters('SVR2016BaselineGPOURL')]",
                            "SVRDisableSSLGPOURL": "[parameters('SVRDisableSSLGPOURL')]",
                            "WKSBaselineGPOURL": "[parameters('WKSBaselineGPOURL')]",
                            "WKSWIN10BaselineGPOURL": "[parameters('WKSWIN10BaselineGPOURL')]",
                            "WKSDisableSSLGPOURL": "[parameters('WKSDisableSSLGPOURL')]",
                            "IEEnhancedGPOURL": "[parameters('IEEnhancedGPOURL')]",
                            "PolicyDefinitionsURL": "[parameters('PolicyDefinitionsURL')]",
                            "DefaultDomainGPOGUID": "[parameters('DefaultDomainGPOGUID')]",
                            "SVRDCBaselineGPOGUID": "[parameters('SVRDCBaselineGPOGUID')]",
                            "SVR2016DCBaselineGPOGUID": "[parameters('SVR2016DCBaselineGPOGUID')]",
                            "SVRDCBaselineTimeGPOGUID": "[parameters('SVRDCBaselineTimeGPOGUID')]",
                            "SVRBaselineGPOGUID": "[parameters('SVRBaselineGPOGUID')]",
                            "SVR2016BaselineGPOGUID": "[parameters('SVR2016BaselineGPOGUID')]",
                            "SVRDisableSSLGPOGUID": "[parameters('SVRDisableSSLGPOGUID')]",
                            "WKSBaselineGPOGUID": "[parameters('WKSBaselineGPOGUID')]",
                            "WKSWIN10BaselineGPOGUID": "[parameters('WKSWIN10BaselineGPOGUID')]",
                            "WKSDisableSSLGPOGUID": "[parameters('WKSDisableSSLGPOGUID')]",
                            "IEEnhancedGPOGUID": "[parameters('IEEnhancedGPOGUID')]",
                            "PolicyDefinitionsGUID": "[parameters('PolicyDefinitionsGUID')]",
                            "DefaultDomainGPOName": "[parameters('DefaultDomainGPOName')]",                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            
                            "SVRDCBaselineGPOName": "[parameters('SVRDCBaselineGPOName')]",
                            "SVR2016DCBaselineGPOName": "[parameters('SVR2016DCBaselineGPOName')]",
                            "SVRDCBaselineTimeGPOName": "[parameters('SVRDCBaselineTimeGPOName')]",
                            "SVRBaselineGPOName": "[parameters('SVRBaselineGPOName')]",
                            "SVR2016BaselineGPOName": "[parameters('SVR2016BaselineGPOName')]",
                            "SVRDisableSSLGPOName": "[parameters('SVRDisableSSLGPOName')]",
                            "WKSBaselineGPOName": "[parameters('WKSBaselineGPOName')]",
                            "WKSWIN10BaselineGPOName": "[parameters('WKSWIN10BaselineGPOName')]",
                            "WKSDisableSSLGPOName": "[parameters('WKSDisableSSLGPOName')]",
                            "IEEnhancedGPOName": "[parameters('IEEnhancedGPOName')]",
                            "PolicyDefinitionsName": "[parameters('PolicyDefinitionsName')]",                                                                                                                                                                                                                                                                                                                    
                            "AdminCreds": {
                                "UserName": "[parameters('adminUsername')]",
                                "Password": "PrivateSettingsRef:AdminPassword"
                            }
                        }
                },
                "protectedSettings": {
                    "Items": {
                        "AdminPassword": "[parameters('adminPassword')]"
                    }
                }                
            }
        }
    ]
