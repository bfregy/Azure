{
"$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
"contentVersion": "1.0.0.0",
"parameters": {
    "ResourceGroup": {
        "type": "string",
        "metadata": {
            "description": "Resource Group"
          }
    },
    "FlowLogName": {
        "type": "string",
        "metadata": {
            "description": "Solution Type"
          }
    },
    "workspaceName": {
        "type": "string",
        "metadata": {
          "description": "Specifies the name of the workspace."
        }
    },
    "NSGName": {
        "type": "string",
        "metadata": {
            "description": "Solution Type"
          }
    },    
    "StorageAccountName": {
        "type": "string",
        "metadata": {
            "description": "Specifies Subscription ID."
          }
    },    
    "lawlocation": {
        "type": "string",
        "metadata": {
          "description": "Specifies the location in which to create the workspace."
        }
    },
    "nwlocation": {
        "type": "string",
        "metadata": {
          "description": "Specifies the location in which to create the workspace."
        }
    },    
    "sku": {
        "type": "string",
        "metadata": {
        "description": "Specifies the service tier of the workspace: Standalone, PerNode, Per-GB"
        }
    }    
},
    "variables": {
      "NSGResourceID": "[resourceId(parameters('ResourceGroup'), 'Microsoft.Network/networkSecurityGroups', parameters('NSGName'))]",
      "StorageAccountResourceID": "[resourceId(parameters('ResourceGroup'), 'Microsoft.Storage/storageAccounts', parameters('StorageAccountName'))]",
      "NetworkWatcherName": "[concat('NetworkWatcher_', parameters('nwlocation'))]",
      "NSGFlowName": "[concat(variables('NetworkWatcherName'), '/', parameters('FlowLogName'))]"               
    },
"resources": [
    {
        "type": "Microsoft.OperationalInsights/workspaces",
        "name": "[parameters('workspaceName')]",
        "apiVersion": "2020-08-01",
        "location": "[parameters('lawlocation')]",
        "properties": {
            "sku": {
                "name": "[parameters('sku')]"
            },
            "features": {
                "searchVersion": 1
            }
        }
    },
    {
        "name": "[variables('NSGFlowName')]",
        "type": "Microsoft.Network/networkWatchers/flowLogs",
        "apiVersion": "2019-11-01",
        "location": "[parameters('nwlocation')]",
        "dependsOn": [
            "[resourceId('Microsoft.OperationalInsights/workspaces',parameters('workspaceName'))]"
        ],            
        "tags": {},
        "properties": {
            "targetResourceId": "[variables('NSGResourceID')]",
            "storageId": "[variables('StorageAccountResourceID')]",
            "enabled": true,
            "retentionPolicy": {
                "days": 5,
                "enabled": true
            },
            "format": {
                "type": "JSON",
                "version": 2
            }
        }
    }
   ]
}