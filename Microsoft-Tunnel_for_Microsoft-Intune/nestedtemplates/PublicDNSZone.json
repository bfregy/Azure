{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ZoneName": {
            "type": "string",
            "metadata": {
                "description": "DNS Zone Name"
              }
        },
        "SPARKRecord": {
            "type": "string",
            "metadata": {
                "description": "SPARK EXternal DNS Record"
              }
        },
        "GWPublicIP": {
            "type": "string",
            "metadata": {
                "description": "SPARK EXternal Public IP"
              }
        }
    },
    "resources": [
        {
            "name": "[parameters('ZoneName')]",
            "type": "Microsoft.Network/dnsZones",
            "apiVersion": "2018-05-01",
            "location": "global",
            "tags": {},
            "properties": {
            },
            "resources": []
        },
        {
        "type": "Microsoft.Network/dnszones/a",
        "name": "[concat(parameters('ZoneName'), '/', parameters('SPARKRecord'))]",
        "apiVersion": "2018-05-01",
        "location": "global",
        "dependsOn": [
            "[parameters('ZoneName')]"
        ],
        "properties": {
            "TTL": 900,
            "ARecords": [
                {
                    "ipv4Address": "[parameters('GWPublicIP')]"
                }
                ]
            }
        }
    ]
}