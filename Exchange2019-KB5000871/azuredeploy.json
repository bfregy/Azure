{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "Location2": {
      "type": "string",
      "defaultValue": "WestUS",
      "metadata": {
        "description": "Choose Region (Example: WestUS)"
      }
    },           
    "CUPatchUrl": {
      "type": "string",
      "defaultValue": "https://download.microsoft.com/download/e/7/5/e7546cd4-9a64-4644-afdf-01ab02d76fd6/Exchange2019-KB5000871-x64-en.msp",
      "allowedValues": [
        "https://download.microsoft.com/download/e/7/5/e7546cd4-9a64-4644-afdf-01ab02d76fd6/Exchange2019-KB5000871-x64-en.msp",
        "https://download.microsoft.com/download/e/e/b/eebfc26d-a170-4ffd-ad7c-7d73639603d6/Exchange2019-KB5000871-x64-en.msp"
      ],         
      "metadata": {
        "description": "Enter a valid Exchange CU Patch URL"
      }
    },
    "CUPatchScriptUrl": {
      "type": "string",
      "defaultValue": "https://aka.ms/ExHCDownload",
      "metadata": {
        "description": "Select a valid Exchange CU Patch URL"
      }
    },    
    "NamingConvention": {
      "type": "string",
      "defaultValue": "khl",
      "metadata": {
        "description": "Environment Naming Convention"
      }
    },                                                                            
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
          "description": "The location of resources, such as templates and DSC modules, that the template depends on"
      },
      "defaultValue": "[deployment().properties.templateLink.uri]"
    },
    "_artifactsLocationSasToken": {
        "type": "securestring",
        "metadata": {
            "description": "Auto-generated token to access _artifactsLocation. Leave it blank unless you need to provide your own value."
        },
        "defaultValue": ""
    }    
  },
  "variables": {        
    "ex1name": "[concat(parameters('NamingConvention'),'-ex19-01')]",                          
    "ex2name": "[concat(parameters('NamingConvention'),'-ex19-02')]"
  },  
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "PatchEX1",       
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/KB5000871.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('ex1name')]"
              },
              "CUPatchUrl": {
                  "value": "[parameters('CUPatchUrl')]"
              },
              "CUPatchScriptUrl": {
                  "value": "[parameters('CUPatchScriptUrl')]"
              },              
              "location": {
                  "value": "[resourceGroup().location]"
              },          
              "_artifactsLocation": {
                "value": "[parameters('_artifactsLocation')]"
              },                                                                                                            
              "_artifactsLocationSasToken": {
                "value": "[parameters('_artifactsLocationSasToken')]"
              }                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                           
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "PatchEX2", 
      "dependsOn": [
        "PatchEX1"
      ],              
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/KB5000871.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('ex2name')]"
              },
              "CUPatchUrl": {
                  "value": "[parameters('CUPatchUrl')]"
              },
              "CUPatchScriptUrl": {
                  "value": "[parameters('CUPatchScriptUrl')]"
              },                                                                                                                                                                                                                                                                                                                                                                   
              "location": {
                  "value": "[parameters('Location2')]"
              },          
              "_artifactsLocation": {
                "value": "[parameters('_artifactsLocation')]"
              },                                                                                                            
              "_artifactsLocationSasToken": {
                "value": "[parameters('_artifactsLocationSasToken')]"
              }                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                           
          }
      }
    }                                                                                                                                                                                                                                                                                                                                                                                                                                                                                  
  ]
}