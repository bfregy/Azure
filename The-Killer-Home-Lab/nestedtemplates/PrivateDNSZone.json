{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ZoneName": {
            "type": "string",
            "metadata": {
                "description": "DNS Zone Name"
              }
        },        
        "vnet1Name": {
            "type": "string",
            "metadata": {
                "description": "Existing DMZ VNET1 Name"
            }            
        },     
        "vnet2Name": {
            "type": "string",
            "metadata": {
                "description": "Existing DMZ VNET2 Name"
            }            
        },              
        "ADFSRecord": {
            "type": "string",
            "metadata": {
                "description": "ADFS Internal DNS Record"
              }
        },                                            
        "ADFS1PrivateIP": {
            "type": "string",
            "metadata": {
                "description": "ADFS1 Internal IP"
              }
        },
        "ADFS2PrivateIP": {
            "type": "string",
            "metadata": {
                "description": "ADFS2 Internal IP"
              }
        }               
    },
    "resources": [
        {
            "name": "[parameters('ZoneName')]",
            "type": "Microsoft.Network/privateDnsZones",
            "apiVersion": "2018-09-01",
            "location": "global",
            "tags": {},
            "properties": {
              "registrationVirtualNetworks": [
                {
                  "id": "[resourceId('Microsoft.Network/virtualNetworks', parameters('vNet1Name'))]"
                },
                {
                  "id": "[resourceId('Microsoft.Network/virtualNetworks', parameters('vNet2Name'))]"
                }                
              ],
              "resolutionVirtualNetworks": [
                {
                    "id": "[resourceId('Microsoft.Network/virtualNetworks', parameters('vNet1Name'))]"
                },
                {
                    "id": "[resourceId('Microsoft.Network/virtualNetworks', parameters('vNet2Name'))]"
                }                
              ]
            },
            "resources": []
          },
          {
          "type": "Microsoft.Network/privateDnsZones/a",
          "name": "[concat(parameters('ZoneName'), '/', parameters('ADFSRecord'))]",
          "apiVersion": "2018-09-01",
          "dependsOn": [
              "[parameters('ZoneName')]"
          ],
          "properties": {
              "ttl": 900,
              "aRecords": [
                  {
                      "ipv4Address": "[parameters('ADFS1PrivateIP')]"
                  },
                  {
                      "ipv4Address": "[parameters('ADFS2PrivateIP')]"
                  }                  
                  ]
              }
          }                    
       ]
    }