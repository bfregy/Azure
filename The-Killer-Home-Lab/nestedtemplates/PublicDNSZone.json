{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ZoneName": {
            "type": "string",
            "metadata": {
                "description": "DNS Zone Name"
              }
        },
        "WEBRecord": {
            "type": "string",
            "metadata": {
                "description": "WEB EXternal DNS Record"
              }
        },        
        "OCSPRecord": {
            "type": "string",
            "metadata": {
                "description": "OCSP EXternal DNS Record"
              }
        },        
        "OWARecord": {
            "type": "string",
            "metadata": {
                "description": "OWA EXternal DNS Record"
              }
        },
        "AutoDiscoverRecord": {
            "type": "string",
            "metadata": {
                "description": "AutoDiscover EXternal DNS Record"
              }
        },        
        "OutlookRecord": {
            "type": "string",
            "metadata": {
                "description": "Outlook EXternal DNS Record"
              }
        },                
        "EASRecord": {
            "type": "string",
            "metadata": {
                "description": "EAS EXternal DNS Record"
              }
        },                        
        "SMTP1Record": {
            "type": "string",
            "metadata": {
                "description": "SMTP1 EXternal DNS Record"
              }
        },
        "SMTP2Record": {
            "type": "string",
            "metadata": {
                "description": "SMTP2 EXternal DNS Record"
              }
        },
        "WEBPublicIP": {
            "type": "string",
            "metadata": {
                "description": "WEB EXternal Public IP"
              }
        },        
        "OCSPPublicIP": {
            "type": "string",
            "metadata": {
                "description": "OCSP EXternal Public IP"
              }
        },                
        "WAP1PublicIP": {
            "type": "string",
            "metadata": {
                "description": "WAP 1 EXternal Public IP"
              }
        },
        "WAP2PublicIP": {
            "type": "string",
            "metadata": {
                "description": "WAP 2 EXternal Public IP"
              }
        },                          
        "SMTP1PublicIP": {
            "type": "string",
            "metadata": {
                "description": "SMTP 1 EXternal Public IP"
              }
        },
        "SMTP2PublicIP": {
            "type": "string",
            "metadata": {
                "description": "SMTP 2 EXternal Public IP"
              }
        }                                       
    },
    "resources": [
        {
            "name": "[parameters('ZoneName')]",
            "type": "Microsoft.Network/dnsZones",
            "apiVersion": "2018-05-01",
            "location": "global",
            "tags": {},
            "properties": {
            },
            "resources": []
        },
        {
        "type": "Microsoft.Network/dnszones/a",
        "name": "[concat(parameters('ZoneName'), '/', parameters('WEBRecord'))]",
        "apiVersion": "2018-05-01",
        "location": "global",
        "dependsOn": [
            "[parameters('ZoneName')]"
        ],
        "properties": {
            "TTL": 900,
            "ARecords": [
                {
                    "ipv4Address": "[parameters('WEBPublicIP')]"
                }
                ]
            }
        },        
        {
        "type": "Microsoft.Network/dnszones/a",
        "name": "[concat(parameters('ZoneName'), '/', parameters('OCSPRecord'))]",
        "apiVersion": "2018-05-01",
        "location": "global",
        "dependsOn": [
            "[parameters('ZoneName')]"
        ],
        "properties": {
            "TTL": 900,
            "ARecords": [
                {
                    "ipv4Address": "[parameters('OCSPPublicIP')]"
                }
                ]
            }
        },
        {
        "type": "Microsoft.Network/dnszones/a",
        "name": "[concat(parameters('ZoneName'), '/', parameters('OWARecord'))]",
        "apiVersion": "2018-05-01",
        "location": "global",
        "dependsOn": [
            "[parameters('ZoneName')]"
        ],
        "properties": {
            "TTL": 900,
            "ARecords": [
                {
                    "ipv4Address": "[parameters('WAP1PublicIP')]"
                },
                {
                    "ipv4Address": "[parameters('WAP2PublicIP')]"
                }
                ]
            }
        },
        {
        "type": "Microsoft.Network/dnszones/a",
        "name": "[concat(parameters('ZoneName'), '/', parameters('AutoDiscoverRecord'))]",
        "apiVersion": "2018-05-01",
        "location": "global",
        "dependsOn": [
            "[parameters('ZoneName')]"
        ],
        "properties": {
            "TTL": 900,
            "ARecords": [
                {
                    "ipv4Address": "[parameters('WAP1PublicIP')]"
                },
                {
                    "ipv4Address": "[parameters('WAP2PublicIP')]"
                }
                ]
            }
        },      
        {
        "type": "Microsoft.Network/dnszones/a",
        "name": "[concat(parameters('ZoneName'), '/', parameters('OutlookRecord'))]",
        "apiVersion": "2018-05-01",
        "location": "global",
        "dependsOn": [
            "[parameters('ZoneName')]"
        ],
        "properties": {
            "TTL": 900,
            "ARecords": [
                {
                    "ipv4Address": "[parameters('WAP1PublicIP')]"
                },
                {
                    "ipv4Address": "[parameters('WAP2PublicIP')]"
                }
                ]
            }
        },       
        {
        "type": "Microsoft.Network/dnszones/a",
        "name": "[concat(parameters('ZoneName'), '/', parameters('EASRecord'))]",
        "apiVersion": "2018-05-01",
        "location": "global",
        "dependsOn": [
            "[parameters('ZoneName')]"
        ],
        "properties": {
            "TTL": 900,
            "ARecords": [
                {
                    "ipv4Address": "[parameters('WAP1PublicIP')]"
                },
                {
                    "ipv4Address": "[parameters('WAP2PublicIP')]"
                }
                ]
            }
        },                           
        {
        "type": "Microsoft.Network/dnszones/a",
        "name": "[concat(parameters('ZoneName'), '/', parameters('SMTP1Record'))]",
        "apiVersion": "2018-05-01",
        "location": "global",
        "dependsOn": [
            "[parameters('ZoneName')]"
        ],
        "properties": {
            "TTL": 900,
            "ARecords": [
                {
                    "ipv4Address": "[parameters('SMTP1PublicIP')]"
                }
                ]
            }
        },  
        {
        "type": "Microsoft.Network/dnszones/a",
        "name": "[concat(parameters('ZoneName'), '/', parameters('SMTP2Record'))]",
        "apiVersion": "2018-05-01",
        "location": "global",
        "dependsOn": [
            "[parameters('ZoneName')]"
        ],
        "properties": {
            "TTL": 900,
            "ARecords": [
                {
                    "ipv4Address": "[parameters('SMTP2PublicIP')]"
                }
                ]
            }
        },          
        {
        "type": "Microsoft.Network/dnszones/MX",
        "name": "[concat(parameters('ZoneName'), '/', '@')]",
        "apiVersion": "2018-05-01",
        "location": "global",
        "dependsOn": [
            "[parameters('ZoneName')]"
        ],
        "properties": {
            "TTL": 900,
        "MXRecords": [
            {
                "preference": 0,
                "exchange": "[concat(parameters('SMTP1Record'), '.', parameters('ZoneName'))]"
            },
            {
                "preference": 100,
                "exchange": "[concat(parameters('SMTP2Record'), '.', parameters('ZoneName'))]"
            }            
        ]
            }
        }                                        
    ]
}