{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "WorkSpaceName": {
            "type": "String",
            "metadata": {
                "description": "Preferred Workspace Name to display"
            }
        },
        "AppGroupName1": {
            "type": "String",
            "metadata": {
                "description": "Preferred App Group Name to display"
            }
        },    
        "AppGroupName2": {
            "type": "String",
            "metadata": {
                "description": "Preferred App Group Name to display"
            }
        },            
        "allApplicationGroupReferences1": {
            "type": "String",
            "metadata": {
                "description": "The existing app groups references of the workspace selected."
            }
        },         
        "allApplicationGroupReferences2": {
            "type": "String",
            "metadata": {
                "description": "The existing app groups references of the workspace selected."
            }
        },                 
        "location": {
            "type": "string",
          "metadata": {
            "description": "Region of Resources"
          }
        }
    },
    "variables": {
        "appGroupResourceId1": "[createArray(resourceId('Microsoft.DesktopVirtualization/applicationgroups/', parameters('appGroupName1')))]",         
        "applicationGroupReferencesArr1": "[if(equals('',parameters('allApplicationGroupReferences1')), variables('appGroupResourceId1'), concat(split(parameters('allApplicationGroupReferences1'),','), variables('appGroupResourceId1')))]",
        "appGroupResourceId2": "[createArray(resourceId('Microsoft.DesktopVirtualization/applicationgroups/', parameters('appGroupName2')))]",                 
        "applicationGroupReferencesArr2": "[if(equals('',parameters('allApplicationGroupReferences2')), variables('appGroupResourceId2'), concat(split(parameters('allApplicationGroupReferences2'),','), variables('appGroupResourceId2')))]"

    },    
    "resources": [
        {
            "name": "[parameters('workSpaceName')]",
            "type": "Microsoft.DesktopVirtualization/workspaces",
            "apiVersion": "2019-12-10-preview",            
            "location": "[parameters('location')]",            
            "properties": {
                "applicationGroupReferences": [
                    "[variables('applicationGroupReferencesArr1')]",
                    "[variables('applicationGroupReferencesArr2')]"
                ]
            }
        }
    ] 
}