{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "NamingConvention": {
            "type": "string",
            "metadata": {
                "description": "Naming Convention"
            }
        },        
        "HostPoolName": {
            "type": "string",
            "metadata": {
                "description": "Public IP Address Name"
            }
        },
        "AppGroupName": {
            "type": "String",
            "metadata": {
                "description": "Preferred App Group Name to display"
            }
        },                                                                                                                                    
        "location": {
            "type": "string",
          "metadata": {
            "description": "Region of Resources"
          }
        }
    },
    "resources": [
        {
            "name": "[parameters('appGroupName')]",
            "type": "Microsoft.DesktopVirtualization/applicationgroups",
            "apiVersion": "2019-12-10-preview",
            "location": "[parameters('location')]",
            "properties": {
                "hostpoolarmpath": "[concat('Microsoft.DesktopVirtualization/hostpools/', parameters('hostpoolName'))]",
                "friendlyName": "[concat(parameters('NamingConvention'), 'Desktop')]",
                "description": "Desktop Application Group created through the Hostpool Wizard",
                "applicationGroupType": "Desktop"
            }
        }
    ] 
}