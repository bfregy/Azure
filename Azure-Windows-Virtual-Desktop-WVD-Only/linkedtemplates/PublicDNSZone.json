{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ZoneName": {
            "type": "string",
            "metadata": {
                "description": "DNS Zone Name"
              }
        }         
    },
    "variables": {
      "HostName": "_msradc",
      "Url": {
        "id": "https://rdweb.wvd.microsoft.com/api/arm/feeddiscovery"
      }
    },    
    "resources": [
        {
            "name": "[parameters('ZoneName')]",
            "type": "Microsoft.Network/dnsZones",
            "apiVersion": "2018-05-01",
            "location": "global",
            "tags": {},
            "properties": {
            },
            "resources": []
        },
        {
        "type": "Microsoft.Network/dnszones/TXT",
        "name": "[concat(parameters('ZoneName'), '/', variables('HostName'))]",
        "apiVersion": "2018-05-01",
        "dependsOn": [
            "[parameters('ZoneName')]"
        ],
        "properties": {
            "TTL": 900,
            "TXTRecords": [
            {
                "value": [
                "[variables('Url')]"
                ]
            }
            ]           
        }    
    }    
]
}