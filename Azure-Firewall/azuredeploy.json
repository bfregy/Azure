{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
        "type": "string",
        "metadata": {
            "description": "The name of the Administrator of the new VM and Domain"
        }
    },
    "adminPassword": {
        "type": "securestring",
      "metadata": {
        "description": "The password for the Administrator account of the new VM and Domain"
      }
    },
    "WindowsServerLicenseType": {
      "type": "string",
      "defaultValue": "None",
      "allowedValues": [
        "None",
        "Windows_Server"
      ],      
      "metadata": {
          "description": "Windows Server OS License Type"
      }
    },     
    "NamingConvention": {
      "type": "string",
      "defaultValue": "khl",
      "metadata": {
        "description": "Environment Naming Convention"
      }
    },
    "DMZVNet1ID": {
      "type": "string",
      "defaultValue": "10.0",
      "metadata": {
        "description": "DMZ VNet1 Prefix"
      }
    },    
    "APPVNet1ID": {
      "type": "string",
      "defaultValue": "10.1",
      "metadata": {
        "description": "APP VNet1 Prefix"
      }
    },        
    "OSVersion": {
        "type": "string",
        "defaultValue": "2019-Datacenter",
        "allowedValues": [
          "2019-Datacenter",
          "2016-Datacenter"
        ],            
        "metadata": {
            "description": "SQL OS Version"
        }
    },
    "VMSize": {
        "type": "string",
        "defaultValue": "Standard_D2s_v3",
        "metadata": {
            "description": "VMSize"
        }
    },        
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
          "description": "The location of resources, such as templates and DSC modules, that the template depends on"
      },
      "defaultValue": "[deployment().properties.templateLink.uri]"
    },
    "_artifactsLocationSasToken": {
        "type": "securestring",
        "metadata": {
            "description": "Auto-generated token to access _artifactsLocation. Leave it blank unless you need to provide your own value."
        },
        "defaultValue": ""
    }    
  },
  "variables": {
    "DMZVNet1Name": "[concat(parameters('NamingConvention'),'-DMZ-VNet1')]",
    "DMZVNet1Prefix": "[concat(parameters('DMZVNet1ID'),'.0.0/16')]",
    "DMZVNet1subnet1Name": "[concat(parameters('NamingConvention'),'-DMZ-VNet1-Subnet1')]",    
    "DMZVNet1subnet1Prefix": "[concat(parameters('DMZVNet1ID'),'.1.0/24')]",    
    "DMZVNet1BastionsubnetPrefix": "[concat(parameters('DMZVNet1ID'),'.253.0/24')]",           
    "DMZVNet1FirewallsubnetPrefix": "[concat(parameters('DMZVNet1ID'),'.254.0/24')]",
    "APPVNet1Name": "[concat(parameters('NamingConvention'),'-APP-VNet1')]",
    "APPVNet1Prefix": "[concat(parameters('APPVNet1ID'),'.0.0/16')]",
    "APPVNet1subnet1Name": "[concat(parameters('NamingConvention'),'-APP-WEB-Subnet1')]",    
    "APPVNet1subnet1Prefix": "[concat(parameters('APPVNet1ID'),'.1.0/24')]",    
    "APPVNet1subnet2Name": "[concat(parameters('NamingConvention'),'-APP-EX-Subnet1')]",    
    "APPVNet1subnet2Prefix": "[concat(parameters('APPVNet1ID'),'.2.0/24')]",
    "APPVNet1subnet3Name": "[concat(parameters('NamingConvention'),'-APP-DB-Subnet1')]",    
    "APPVNet1subnet3Prefix": "[concat(parameters('APPVNet1ID'),'.3.0/24')]",            
    "APPVNet1subnet4Name": "[concat(parameters('NamingConvention'),'-APP-AD-Subnet1')]",    
    "APPVNet1subnet4Prefix": "[concat(parameters('APPVNet1ID'),'.4.0/24')]",            
    "APPVNet1subnet5Name": "[concat(parameters('NamingConvention'),'-APP-ID-Subnet1')]",    
    "APPVNet1subnet5Prefix": "[concat(parameters('APPVNet1ID'),'.5.0/24')]",                
    "APPVNet1subnet6Name": "[concat(parameters('NamingConvention'),'-APP-IF-Subnet1')]",    
    "APPVNet1subnet6Prefix": "[concat(parameters('APPVNet1ID'),'.6.0/24')]",                
    "FirewallName": "[concat(parameters('NamingConvention'),'-Firewall')]",                   
    "RouteTableName": "[concat(parameters('NamingConvention'),'-APP-RT1')]",                       
    "webname": "[concat(parameters('NamingConvention'),'-web-01')]",                      
    "webIP": "[concat(parameters('APPVNet1ID'),'.1.',variables('weblastoctet'))]", 
    "weblastoctet": "100",
    "EXIP": "[concat(parameters('APPVNet1ID'),'.2.',variables('exlastoctet'))]", 
    "exlastoctet": "100",

    "fwIP": "[concat(parameters('DMZVNet1ID'),'.254.',variables('fwlastoctet'))]",     
    "fwlastoctet": "4"    
  },  
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "DMZVNet1",
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/dmzvnet.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "vnetName": {
                  "value": "[variables('DMZVNet1Name')]"
              },
              "vnetprefix": {
                  "value": "[variables('DMZVNet1Prefix')]"
              },
              "subnet1Name": {
                  "value": "[variables('DMZVNet1subnet1Name')]"
              },
              "subnet1Prefix": {
                  "value": "[variables('DMZVNet1subnet1Prefix')]"
              },           
              "BastionsubnetPrefix": {
                "value": "[variables('DMZVNet1BastionsubnetPrefix')]"
              },     
              "FirewallsubnetPrefix": {
                "value": "[variables('DMZVNet1FirewallsubnetPrefix')]"
              },                            
              "location": {
                  "value": "[resourceGroup().location]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "APPVNet1",
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/appvnet.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "vnetName": {
                  "value": "[variables('APPVNet1Name')]"
              },
              "vnetprefix": {
                  "value": "[variables('APPVNet1Prefix')]"
              },
              "subnet1Name": {
                  "value": "[variables('APPVNet1subnet1Name')]"
              },
              "subnet1Prefix": {
                  "value": "[variables('APPVNet1subnet1Prefix')]"
              },           
              "subnet2Name": {
                  "value": "[variables('APPVNet1subnet2Name')]"
              },
              "subnet2Prefix": {
                  "value": "[variables('APPVNet1subnet2Prefix')]"
              },           
              "subnet3Name": {
                  "value": "[variables('APPVNet1subnet3Name')]"
              },
              "subnet3Prefix": {
                  "value": "[variables('APPVNet1subnet3Prefix')]"
              },           
              "subnet4Name": {
                  "value": "[variables('APPVNet1subnet4Name')]"
              },
              "subnet4Prefix": {
                  "value": "[variables('APPVNet1subnet4Prefix')]"
              },           
              "subnet5Name": {
                  "value": "[variables('APPVNet1subnet5Name')]"
              },
              "subnet5Prefix": {
                  "value": "[variables('APPVNet1subnet5Prefix')]"
              },           
              "subnet6Name": {
                  "value": "[variables('APPVNet1subnet6Name')]"
              },
              "subnet6Prefix": {
                  "value": "[variables('APPVNet1subnet6Prefix')]"
              },                                                                   
              "location": {
                  "value": "[resourceGroup().location]"
              }
          }
      }
    }, 
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "PeeringToSite2",
      "dependsOn": [
        "DMZVNet1",
        "APPVNet1"
      ],            
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/peering.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "SourceVNetName": {
                "value": "[variables('APPVNet1Name')]"
              },
              "TargetVNetName": {
                "value": "[variables('DMZVNet1Name')]"
              },              
              "allowVirtualNetworkAccess": {
                "value": "true"
              },                                                                                                                                                                                                                                                                                                           
              "allowForwardedTraffic": {
                "value": "true"
              },                                                                                                                                                                                                                                                                                                           
              "allowGatewayTransit": {
                "value": "false"
              },
              "useRemoteGateways": {
                "value": "false"
              },                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                
              "location": {
                  "value": "[resourceGroup().location]"
              }
          }
      }
    },    
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "PeeringToSite1",
      "dependsOn": [
        "PeeringToSite2"
      ],            
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/peering.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "SourceVNetName": {
                "value": "[variables('DMZVNet1Name')]"
              },
              "TargetVNetName": {
                "value": "[variables('APPVNet1Name')]"
              },              
              "allowVirtualNetworkAccess": {
                "value": "true"
              },                                                                                                                                                                                                                                                                                                           
              "allowForwardedTraffic": {
                "value": "true"
              },                                                                                                                                                                                                                                                                                                           
              "allowGatewayTransit": {
                "value": "false"
              },
              "useRemoteGateways": {
                "value": "false"
              },                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                
              "location": {
                  "value": "[resourceGroup().location]"
              }
          }
      }
    },               
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "BastionHost1",
      "dependsOn": [
        "DMZVNet1"
      ],
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/bastionhost.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "publicIPAddressName": {
                "value": "[concat(variables('DMZVNet1Name'),'-Bastion-pip')]"
              },
              "AllocationMethod": {
                "value": "Static"
              },              
              "vnetName": {
                  "value": "[variables('DMZVNet1Name')]"
              },
              "subnetName": {
                  "value": "AzureBastionSubnet"
              },
              "location": {
                  "value": "[resourceGroup().location]"
              }
          }
      }
    },        
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "DeployAzureFirewall",
      "dependsOn": [
        "DMZVNet1"
      ],      
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/AzureFirewall.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "FirewallName": {
                  "value": "[variables('FirewallName')]"
              },
              "vnetName": {
                  "value": "[variables('DMZVNet1Name')]"
              },
              "subnetName": {
                  "value": "AzureFirewallSubnet"
              },         
              "webIP": {
                  "value": "[variables('webIP')]"
              },                               
              "OWAIP": {
                  "value": "[variables('EXIP')]"
              },                          
              "SMTPIP": {
                  "value": "[variables('EXIP')]"
              },                                                             
              "location": {
                  "value": "[resourceGroup().location]"
              }
          }
      }
    },    
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "DeployAPPRouteTable",
      "dependsOn": [
        "APPVNet1"
      ],      
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/RouteTable.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "FirewallIP": {
                  "value": "[variables('fwIP')]"
              },
              "RouteTableName": {
                  "value": "[variables('RouteTableName')]"
              },                 
              "location": {
                  "value": "[resourceGroup().location]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "UpdateSubnetRouteTable",
      "dependsOn": [
        "DeployAPPRouteTable"
      ],      
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/updateappvnetroutetable.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "vnetName": {
                  "value": "[variables('APPVNet1Name')]"
              },
              "vnetprefix": {
                  "value": "[variables('APPVNet1Prefix')]"
              },
              "subnet1Name": {
                  "value": "[variables('APPVNet1subnet1Name')]"
              },
              "subnet1Prefix": {
                  "value": "[variables('APPVNet1subnet1Prefix')]"
              },           
              "subnet2Name": {
                  "value": "[variables('APPVNet1subnet2Name')]"
              },
              "subnet2Prefix": {
                  "value": "[variables('APPVNet1subnet2Prefix')]"
              },           
              "subnet3Name": {
                  "value": "[variables('APPVNet1subnet3Name')]"
              },
              "subnet3Prefix": {
                  "value": "[variables('APPVNet1subnet3Prefix')]"
              },           
              "subnet4Name": {
                  "value": "[variables('APPVNet1subnet4Name')]"
              },
              "subnet4Prefix": {
                  "value": "[variables('APPVNet1subnet4Prefix')]"
              },           
              "subnet5Name": {
                  "value": "[variables('APPVNet1subnet5Name')]"
              },
              "subnet5Prefix": {
                  "value": "[variables('APPVNet1subnet5Prefix')]"
              },           
              "subnet6Name": {
                  "value": "[variables('APPVNet1subnet6Name')]"
              },
              "subnet6Prefix": {
                  "value": "[variables('APPVNet1subnet6Prefix')]"
              },                                                                   
              "RouteTableName": {
                  "value": "[variables('RouteTableName')]"
              },                                          
              "location": {
                  "value": "[resourceGroup().location]"
              }
          }
      }
    },            
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "deployWEBVM",
      "dependsOn": [
        "APPVNet1"
      ],      
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/1nic-1disk-vm.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('webname')]"
              },
              "computerIP": {
                  "value": "[variables('webIP')]"
              },
              "Publisher": {
                  "value": "MicrosoftWindowsServer"
              },
              "Offer": {
                  "value": "WindowsServer"
              },
              "OSVersion": {
                "value": "[parameters('OSVersion')]"
              },              
              "LicenseType": {
                "value": "[parameters('WindowsServerLicenseType')]"
              },            
              "VMSize": {
                "value": "[parameters('VMSize')]"
              },
              "vnetName": {
                "value": "[variables('APPVNet1Name')]"
              },            
              "subnetName": {
                "value": "[variables('APPVNet1subnet1Name')]"
              },                                                                                                                   
              "adminUsername": {
                "value": "[parameters('adminUsername')]"
              },                                                                                                            
              "adminPassword": {
                "value": "[parameters('adminPassword')]"
              },                                                                                                                                        
              "location": {
                  "value": "[resourceGroup().location]"
              }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "InstallIIS",
      "dependsOn": [
        "DeployAzureFirewall",
        "deployWEBVM"
      ],      
      "properties": {
          "mode": "Incremental",
          "templateLink": {
              "uri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/iis.json', parameters('_artifactsLocationSasToken')))]",
              "contentVersion": "1.0.0.0"
          },
          "parameters": {
              "computerName": {
                  "value": "[variables('webname')]"
              },           
              "location": {
                  "value": "[deployment().location]"
              },                                          
              "_artifactsLocation": {
                "value": "[parameters('_artifactsLocation')]"
              },                                                                                                            
              "_artifactsLocationSasToken": {
                "value": "[parameters('_artifactsLocationSasToken')]"
              }                                                                                                                                                                                                                                                                                                                                                                                                                                                               
          }
      }
    }         
  ]
}