{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "vnetName": {
        "type": "string",
        "metadata": {
          "description": "VNet name"
        }
      },
      "vnetprefix": {
        "type": "string",
        "metadata": {
          "description": "VNet prefix"
        }
      },
      "subnet1Name": {
        "type": "string",
        "metadata": {
          "description": "Subnet 1 Name"
        }
      },      
      "subnet1Prefix": {
        "type": "string",
        "metadata": {
          "description": "Subnet 1 Prefix"
        }
      },    
      "BastionsubnetPrefix": {
        "type": "string",
        "metadata": {
          "description": "Bastion Subnet Prefix"
        }
      },  
      "FirewallsubnetPrefix": {
        "type": "string",
        "metadata": {
          "description": "Firewall Subnet Prefix"
        }
      }, 
      "RouteTableName": {
        "type": "string",
        "metadata": {
          "description": "Route Table Name"
        }
      },                  
      "location": {
        "type": "string",
        "metadata": {
          "description": "Region of Resources"
        }
      }
    },
  "variables": {
      "RouteTableId": "[resourceId(resourceGroup().name, 'Microsoft.Network/routeTables', parameters('RouteTableName'))]"      
  },    
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[parameters('vnetName')]",
      "apiVersion": "2020-04-01",
      "location": "[parameters('location')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('vnetprefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[parameters('subnet1Name')]",
            "properties": {
              "addressPrefix": "[parameters('subnet1Prefix')]"
              
            },
            "RouteTable": {
              "id": "[variables('RouteTableId')]"
            }
          },        
          {
            "name": "AzureBastionSubnet",
            "properties": {
              "addressPrefix": "[parameters('BastionsubnetPrefix')]"
              
            }
          },
          {
            "name": "AzureFirewallSubnet",
            "properties": {
              "addressPrefix": "[parameters('FirewallsubnetPrefix')]"
              
            }
          }                              
        ]
      }
    }
  ],
  "outputs": {
      "vnetName": {
          "type": "string",
          "value": "[parameters('vnetName')]"
      }
  }  
}
