{
"$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
"contentVersion": "1.0.0.0",
"parameters": {
  "RSVaultName": {
    "type": "string",
    "metadata": {
      "description": "Recovery Services Vault Name"
    }
  },
  "SystemManagedID": {
      "type": "string",
      "metadata": {
        "description": "System Managed ID"
      }
    },
    "roleAssignmentGuid": {
      "type": "string",
      "metadata": {
        "description": "A new GUID used to identify the role assignment"
      }
    },
    "scope": {
      "type": "string",
      "metadata": {
        "description": "Scope for Role Assignment"
      }
    }             
},
"variables": {
  "scope": "[concat('Microsoft.RecoveryServices/vaults', '/', parameters('RSVaultName'))]",
  "RoleDefinitionID": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', parameters('RoleDefinitionID'))]"
},
"resources": [
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2018-09-01-preview",
      "name": "[parameters('roleAssignmentGuid')]",
      "properties": {
        "roleDefinitionId": "[variables('RoleDefinitionId')]",
        "principalId": "[parameters('SystemManagedID')]",
        "principalType": "ServicePrincipal",
        "scope": "[variables('scope')]"
      }
    }
  ]
}
